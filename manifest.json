{
  "manifest_version": 2,
 
  "name": "Google News Comments",
  "version": "0.1.0",
  "description": "Add Comments to Google News",

  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"  
  },

  "permissions": ["<all_urls>", "activeTab", "webRequest", "webRequestBlocking"],
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["jquery-3.5.1.min.js", "content.js"],
    "matches": ["https://news.google.com/*"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": ["jquery-3.5.1.min.js", "functions.js"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
 
}